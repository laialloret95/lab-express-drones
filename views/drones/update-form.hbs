<div class="update-bg">
    <div class="form-container">
        <h2>Update the drone</h2>
        <form action="/drones/{{drone.id}}/edit" method="post">

            <label>Name:</label>
            <input type="text" name="name" value="{{drone.name}}" />

            <label for="propellers">Propellers:</label>
            <input type="number" name="propellers" value={{drone.propellers}} id="propellers" />

            <label for="maxSpeed">Max Speed:</label>
            <input type="number" name="maxSpeed" value={{drone.maxSpeed}} id="maxSpeed"> </input>

            <button type="submit">Save Changes</button>

        </form>
    </div>
</div>